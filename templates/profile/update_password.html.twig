{% extends 'base.html.twig' %}

{% block title %}Update your password{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-5 mt-5">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1>Update your password</h1>

            {{ form_errors(updatePasswordForm) }}

            {{ form_start(updatePasswordForm) }}
                {{ form_row(updatePasswordForm.currentPassword) }}
                {{ form_row(updatePasswordForm.plainPassword) }}
                <button type="submit" class="btn btn-primary">Update password</button>
            {{ form_end(updatePasswordForm) }}
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-5 mt-5">
            <a href="{{ path('app_profile') }}" class="mt-5">Change your profile</a>
        </div>
    </div>

</div>
{% endblock %}
